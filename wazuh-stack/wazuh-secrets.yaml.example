# =============================================================================
# Wazuh Credentials Template - EXAMPLE FILE
# =============================================================================
# Copy this file to wazuh-secrets.yaml and fill with your actual values.
# DO NOT commit wazuh-secrets.yaml to git!
#
# Deploy BEFORE helm install:
#   kubectl create namespace wazuh
#   kubectl apply -f wazuh-secrets.yaml
#
# Generate password hashes with:
#   docker run --rm -ti wazuh/wazuh-indexer:4.14.1 \
#     bash /usr/share/wazuh-indexer/plugins/opensearch-security/tools/hash.sh
# =============================================================================

apiVersion: v1
kind: Secret
metadata:
  name: wazuh-credentials
  namespace: wazuh
type: Opaque
stringData:
  # ===========================================================================
  # INDEXER (OpenSearch) - Admin credentials
  # ===========================================================================
  INDEXER_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"
  INDEXER_PASSWORD_HASH: "$2y$12$CHANGE_ME_BCRYPT_HASH_HERE"

  # ===========================================================================
  # DASHBOARD - MUST use "kibanaserver" username
  # ===========================================================================
  # ⚠️ kibanaserver is a reserved OpenSearch internal user with special
  # permissions. Do NOT change this username.
  DASHBOARD_USERNAME: "kibanaserver"
  DASHBOARD_PASSWORD: "CHANGE_ME_STRONG_PASSWORD"
  DASHBOARD_PASSWORD_HASH: "$2a$12$CHANGE_ME_BCRYPT_HASH_HERE"

  # ===========================================================================
  # WAZUH API - Dashboard to Manager communication
  # ===========================================================================
  # Password requirements: uppercase, lowercase, number, symbol (.*+?-)
  API_USERNAME: "wazuh-wui"
  API_PASSWORD: "CHANGE_ME_Complex_Pass1*"

  # ===========================================================================
  # AGENT ENROLLMENT
  # ===========================================================================
  authd.pass: "CHANGE_ME_ENROLLMENT_PASSWORD"
