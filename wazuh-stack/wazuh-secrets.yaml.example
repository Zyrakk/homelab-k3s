# =============================================================================
# Wazuh Credentials - Template Example
# =============================================================================
# This is a template file. Copy to wazuh-secrets.yaml and fill with actual values.
# Deploy with: kubectl apply -f wazuh-stack/wazuh-secrets.yaml
# =============================================================================

apiVersion: v1
kind: Secret
metadata:
  name: wazuh-credentials
  namespace: wazuh
type: Opaque
stringData:
  # Indexer credentials (OpenSearch admin)
  # Generate password hash with: docker run --rm -ti wazuh/wazuh-indexer:4.14.1 bash /usr/share/wazuh-indexer/plugins/opensearch-security/tools/hash.sh
  indexer-password: "CHANGE_ME_STRONG_PASSWORD"
  indexer-password-hash: "CHANGE_ME_BCRYPT_HASH"  # Bcrypt hash of the password above

  # Cluster key for Wazuh manager (generate with: openssl rand -hex 16)
  cluster-key: "CHANGE_ME_RANDOM_32_CHAR_HEX"

  # API credentials (for dashboard and agents)
  # Password MUST contain: uppercase, lowercase, number and symbol (.*+?-)
  api-username: "wazuh-wui"
  api-password: "CHANGE_ME_STRONG_PASSWORD"

  # Agent enrollment password
  agent-enrollment-password: "CHANGE_ME_ENROLL_PASSWORD"

  # Dashboard credentials (OpenSearch Dashboards/Kibana)
  dashboard-username: "kibanaserver"
  dashboard-password: "kibanaserver"
  dashboard-password-hash: "CHANGE_ME_BCRYPT_HASH"
